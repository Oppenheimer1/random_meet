<%= page_header do %>
  <h1>Sign Up For High Speed Chess</h1>
<% end %>

<div class="row">
  <div class="span6">
    <h2>Your Information</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-vertical' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.input :first_name, input_html: { class: 'input-xlarge' } %>
      <%= f.input :last_name, input_html: { class: 'input-xlarge' } %>
      <%= f.input :profile_name, input_html: { class: 'input-xlarge' } %>
      <%= f.input :email, input_html: { class: 'input-xlarge' } %>
      <%= f.input :avatar, as: :file %> <%= bootstrap_paperclip_picture f, :avatar %>
      <%= f.input :password, input_html: { class: 'input-xlarge', autocomplete: 'off' } %>
      <%= f.input :password_confirmation, input_html: { class: 'input-xlarge', autocomplete: 'off' } %>
      <div class="form-actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %><br />
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
  <div class="span6">
    <h2>Why Sign Up?</h2>
    <p>
    <p>
      To let others know that you're ready to play the faster game of Chess you've ever played.</p>
  </div>
</div>